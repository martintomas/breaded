.textFeild
  = label_tag :same_as_delivery_address, class: 'checkbox-container' do
    = t 'app.get_breaded.payment.billing_option'
    = check_box_tag :same_as_delivery_address, '', true, data: { target: 'payments--new.billingAddressCheckbox', action: 'payments--new#toggleAddress' }
    span class="checkmark"
.billing-address-section
  span
    = t 'app.get_breaded.payment.billing_address.title'
  .textFeild
    span
      = text_field_tag :address_line, '', data: { target: 'payments--new.addressLine', "default-value": "#{f.object.address&.address_line}" }
      = label_tag :address_line
    span
      = text_field_tag :street, '', data: { target: 'payments--new.street', "default-value": "#{f.object.address&.street}" }
      = label_tag :street
    span
      = text_field_tag :city, '', data: { target: 'payments--new.city', "default-value": "#{f.object.address&.city}" }
      = label_tag :city
    span
      = text_field_tag :postal_code, '', data: { target: 'payments--new.postalCode', "default-value": "#{f.object.address&.postal_code}" }
      = label_tag :postal_code
