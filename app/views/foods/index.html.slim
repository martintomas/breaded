section.container
  .breads-lg-12.breads-md-12.breads-sm-12.breads-xs-12.pickup
    h1 = t 'app.browse_bread.title'
    p = t 'app.browse_bread.subtitle'
    #stick-here
    #container
      #tab-container
        == render partial: 'foods/menu', locals: { page: 'browse_bread' }
        #tab-content.breads-lg-12.breads-md-12.breads-sm-12.breads-xs-12 data-controller='shop-basket' data-shop-basket-max-items="#{Rails.application.config.options[:default_number_of_breads]}"
          .breads-lg-12.breads-md-12.breads-sm-12.breads-xs-12.tab-section.active.browse_bread data-controller='browse-bread-filter' data-browse-bread-filter-base-url="#{foods_url}"
            .breads-lg-9.breads-md-9.breads-sm-9.breads-xs-12.browse_bread
              .breads-lg-3.breads-md-3.breads-sm-3.breads-xs-12 style="z-index: 1;"
                == render partial: 'foods/filter'
              .breads-lg-9.breads-md-9.breads-sm-9.breads-xs-12.itemsBlock.active data-target="browse-bread-filter.entries"
              .pagination data-target="browse-bread-filter.pagination"
            == render partial: 'foods/shopping_basket'
            == render partial: 'foods/shopping_basket_item'

== render partial: 'shared/gift'

