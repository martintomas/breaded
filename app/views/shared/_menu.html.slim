header.header data-controller='components--header' data-target='components--header.menu' data-action='scroll@window->components--header#hideHeader' data-components--header-last-scroll='0' data-components--header-delta='5'
  div
    = link_to inline_svg_pack_tag('media/images/logo.svg', style: 'width: 150px; height: 64px;'), root_path, class: 'logo'
    input.menu-btn#menu-btn type='checkbox' data-action='click->components--header#toggleMobMenu'
    label.menu-icon for='menu-btn'
      span.navicon
    ul.menu
      li = link_to I18n.t('app.menu.browse_breads'), foods_path
      li = link_to I18n.t('app.menu.about'), '#'
      li = link_to I18n.t('app.menu.gift'), '#'
      - if current_user.present?
        li = link_to current_user.email, destroy_user_session_path, method: :delete
      - else
        li = link_to I18n.t('app.menu.login'), new_user_session_path
